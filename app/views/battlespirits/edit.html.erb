<%# タイトルをクリックするとトップページに戻る %>
<div class="deck-header">
  <div class="left-header">
    デッキレシピ
  </div>
</div>

<div class="mains">
  <%= form_with model: @battlespirits, class: 'form', local: true do |f| %>
    <%# デッキ名を記入 %>
    <div class= "deck">
      <div class="deck-name">
        <div class="category">
          デッキ名 
        </div>
        <div class="names">
          <%= f.text_field :deck_name, class: 'form-detail', placeholder: 'デッキ名' %>
        </div>
      </div>
      <div class="color_selection">
        色選択
        <%# ActiveHashで色を選択 %>
        <%= f.collection_select(:color_id, Color.all, :id, :name, {}, {class:"color-select"}) %>
      </div>
    </div>

    <%# カテゴリの横にカード名を入力 %>
    <div class="deck">
      <div class="category">
        アルティメット  
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :ultimate1, class: 'form-detail', placeholder: 'アルティメット' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :ultimate2, class: 'form-detail', placeholder: 'アルティメット' %> :  3枚
        </div>
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :ultimate3, class: 'form-detail', placeholder: 'アルティメット' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :ultimate4, class: 'form-detail', placeholder: 'アルティメット' %> :  3枚
        </div>
      </div>
    </div>

    <div class="deck">
      <div class="category">
        スピリット
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :spirit1, class: 'form-detail', placeholder: 'スピリット' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :spirit2, class: 'form-detail', placeholder: 'スピリット' %> :  3枚
        </div>
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :spirit3, class: 'form-detail', placeholder: 'スピリット' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :spirit4, class: 'form-detail', placeholder: 'スピリット' %> :  3枚
        </div>
      </div>
    </div>

    <div class="deck">
      <div class="category">
        ブレイブ 
        <%# ブレイブは3~4枚がベストなバランスかも、スピリットの入力フォームを増やす必要がある %>
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :brave1, class: 'form-detail', placeholder: 'ブレイブ' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :brave2, class: 'form-detail', placeholder: 'ブレイブ' %> :  3枚
        </div>
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :brave3, class: 'form-detail', placeholder: 'ブレイブ' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :brave4, class: 'form-detail', placeholder: 'ブレイブ' %> :  3枚
        </div>
      </div>
    </div>

    <div class="deck">
      <div class="category">
        マジック
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :magic1, class: 'form-detail', placeholder: 'マジック' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :magic2, class: 'form-detail', placeholder: 'マジック' %> :  3枚
        </div>
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :magic3, class: 'form-detail', placeholder: 'マジック' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :magic4, class: 'form-detail', placeholder: 'マジック' %> :  3枚
        </div>
      </div>
    </div>

    <div class="deck">
      <div class="category">
        ネクサス
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :nexus1, class: 'form-detail', placeholder: 'ネクサス' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :nexus2, class: 'form-detail', placeholder: 'ネクサス' %> :  3枚
        </div>
      </div>
      <div class="cards">
        <div class="card">
          <%= f.text_field :nexus3, class: 'form-detail', placeholder: 'ネクサス' %> :  3枚
        </div>
        <div class="card">
          <%= f.text_field :nexus4, class: 'form-detail', placeholder: 'ネクサス' %> :  3枚
        </div>
      </div>
    </div>

    <div class="total">
      合計: 40枚
    </div>

    <div class="post-btn-contents">
      <div class="form-submit">
        <%# 保存 %>
        <%= f.submit '保存', class: 'form-submit' %>
      </div>
      <div class="back-btn">
        <%# 戻る %>
        <%=link_to '戻る', battlespirit_path, class:"back-btn" %>
      </div>
    </div>
  <% end %>
</div>