          <!-- battlespirits リストの各要素に対して処理を行う -->
          <% @battlespirits.each do |battlespirit| %>
            <div class="deck_list">
              <div class="deck">
               <!-- 色が2の場合、デッキ名を表示 -->
               <%= battlespirit.deck_name if battlespirit.color_id == 2 %>
              </div>

