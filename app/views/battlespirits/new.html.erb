<%# タイトルをクリックするとトップページに戻る %>
<div class="deck-header">
  <div class="left-header">
    デッキレシピ
  </div>
</div>

<%# デッキ作成  cardを縦横2列にし「カード名：3枚」の形で保存、枚数はActiveHashで表記%>
<div class="mains">
  <%= form_with model: @battlespirits, class: 'form', local: true do |f| %>
    <%# デッキ名を記入 %>
    <div class= "deck">
      <div class="deck-name">
        <div class="category">
          デッキ名 
        </div>
        <div class="names">
          <%= f.text_field :deck_name, class: 'form-detail', placeholder: 'デッキ名', style: 'height: 50px;' %>
        </div>
      </div>
      <div class="color_selection">
        色選択
        <%# ActiveHashで色を選択 %>
        <%= f.collection_select(:color_id, Color.all, :id, :name, {}, {class:"color-select", style: 'height: 50px;' }) %>
      </div>
    </div>

    <%# カテゴリの横にカード名を入力 %>
    <div class="deck">
      <div class="category">
        アルティメット  
      </div>
      <div class="cards">
        <% (1..2).each do |i| %>
          <div class="card">
            <div class="column">
              <div class="card-name">
                <%= f.text_field "ultimate#{i}", class: 'form-detail card-count-select', placeholder: 'アルティメット' %>
              </div>
              <div class="card-count">
                :<%= f.select "ultimate#{i}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
            <div class="column">
              <div class="card-name">
                <%= f.text_field "ultimate#{i+2}", class: 'form-detail card-count-select', placeholder: 'アルティメット' %>
              </div>
              <div class="card-count">
                :<%= f.select "ultimate#{i+2}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>


    <div class="deck">
      <div class="category">
        スピリット
      </div>
      <div class="cards">
        <% (1..2).each do |i| %>
          <div class="card">
            <div class="column">
              <div class="card-name">
                <%= f.text_field "spirit#{i}", class: 'form-detail card-count-select', placeholder: 'スピリット' %>
              </div>
              <div class="card-count">
                :<%= f.select "spirit#{i}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
            <div class="column">
              <div class="card-name">
                <%= f.text_field "spirit#{i+2}", class: 'form-detail card-count-select', placeholder: 'スピリット' %>
              </div>
              <div class="card-count">
                :<%= f.select "spirit#{i+2}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="deck">
      <div class="category">
        ブレイブ 
        <%# ブレイブは3~4枚がベストなバランスかも、スピリットの入力フォームを増やす必要がある %>
      </div>
      <div class="cards">
        <% (1..2).each do |i| %>
          <div class="card">
            <div class="column">
              <div class="card-name">
                <%= f.text_field "brave#{i}", class: 'form-detail card-count-select', placeholder: 'ブレイブ' %>
              </div>
              <div class="card-count">
                :<%= f.select "brave#{i}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
            <div class="column">
              <div class="card-name">
                <%= f.text_field "brave#{i+2}", class: 'form-detail card-count-select', placeholder: 'ブレイブ' %>
              </div>
              <div class="card-count">
                :<%= f.select "brave#{i+2}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="deck">
      <div class="category">
        マジック
      </div>
      <div class="cards">
        <% (1..2).each do |i| %>
          <div class="card">
            <div class="column">
              <div class="card-name">
                <%= f.text_field "magic#{i}", class: 'form-detail card-count-select', placeholder: 'マジック' %>
              </div>
              <div class="card-count">
                :<%= f.select "magic#{i}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
            <div class="column">
              <div class="card-name">
                <%= f.text_field "magic#{i+2}", class: 'form-detail card-count-select', placeholder: 'マジック' %>
              </div>
              <div class="card-count">
                :<%= f.select "magic#{i+2}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="deck">
      <div class="category">
        ネクサス
      </div>
      <div class="cards">
        <% (1..2).each do |i| %>
          <div class="card">
            <div class="column">
              <div class="card-name">
                <%= f.text_field "nexus#{i}", class: 'form-detail card-count-select', placeholder: 'ネクサス' %>
              </div>
              <div class="card-count">
                :<%= f.select "nexus#{i}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
            <div class="column">
              <div class="card-name">
                <%= f.text_field "nexus#{i+2}", class: 'form-detail card-count-select', placeholder: 'ネクサス' %>
              </div>
              <div class="card-count">
                :<%= f.select "nexus#{i+2}_count", options_for_select(CardCount.all.map { |cc| [cc.label, cc.id] }), {}, class: 'form-detail', style: 'width: 50px;' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="total" id="total-display">
      合計: 0枚 <!-- 初期値は0としておく -->
    </div>

    <div class="post-btn-contents">
      <div class="form-submit">
        <%# 保存 %>
        <%= f.submit '保存', class: 'form-submit' %>
      </div>
      <div class="back-btn">
        <%# 戻る %>
        <%=link_to '戻る', battlespirits_path, class:"back-btn" %>
      </div>
    </div>
  <% end %>
</div>